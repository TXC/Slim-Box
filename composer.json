{
    "name": "txc/slim-box",
    "description": "A bunch of PHP Slim functionality bundled to be autowired",
    "type": "library",
    "homepage": "https://txc.se/",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Markl√©n",
            "email": "txc@txc.se"
        }
    ],
    "suggest": {
        "ext-pdo_mysql": "*",
        "ext-pdo_sqlite": "*",
        "ext-pdo_pgsql": "*",
        "slim/twig-view": "^3.3"
    },
    "require": {
        "php": "^8.2",
        "ext-fileinfo": "*",
        "ext-gettext": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.12",
        "league/event": "^3.0.2",
        "monolog/monolog": "^2.5",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.3",
        "psr/log": "^1.0 || ^2.0",
        "slim/php-view": "^3.1.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.10",
        "symfony/cache": "^6.1",
        "symfony/console": "^6.1",
        "symfony/finder": "^6.1",
        "vlucas/phpdotenv": "^v5.5",
        "zeuxisoo/slim-whoops": "0.7.*"
    },
    "require-dev": {
        "fakerphp/faker": "^v1.19.0",
        "jangregor/phpstan-prophecy": "^1.0.0",
        "php-coveralls/php-coveralls": "^2.5",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^1.6",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpunit/phpunit": "^9.5.20",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "TXC\\Box\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "TXC\\Box\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/slimbox"],
    "scripts": {
        "start": "@php -S localhost:8080 -t public",
        "phpcs": "phpcs --report=full",
        "phpstan": "phpstan analyze",
        "test": "phpunit"
    }
}
